<resources>

    <style name="SplashTheme" parent ="Theme.AppCompat.NoActionBar">
        <item name ="android:windowBackground">@drawable/list_back_logo</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>


        <item name="android:textViewStyle">@style/yanolzaTextView</item>
        <item name="android:buttonStyle">@style/yanolzaButton</item>
        <item name="android:editTextStyle">@style/yanolzaedittext</item>


    </style>



    <!-- font -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:fontFamily">@font/yanolza</item>
    </style>


    <style name="AppTheme.DialogWhenLarge" parent="@android:style/Theme.Holo.Light.DialogWhenLarge">
        <item name="android:fontFamily">@font/yanolza</item>
    </style>

    <style name="yanolzaTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/yanolza</item>
    </style>

    <style name="yanolzaButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/yanolza</item>
    </style>
    <style name="yanolzaedittext" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/yanolza</item>
    </style>


    <!-- calendar widget theme-->
    <style name="CalendarCell">
        <item name="android:id">@android:id/text1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/yanolza</item>
        <item name="android:textColor">@color/foreground_semi</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- app theme colors -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/primary</item>
    </style>



</resources>
